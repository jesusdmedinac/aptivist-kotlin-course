<!--
 CONFIGURACIN DE LOGBACK (Phase 1.1)
Este archivo configura c贸mo y d贸nde se muestran los logs de nuestra aplicaci贸n.
Logback es una implementaci贸n r谩pida y flexible del API SLF4J.
-->
<configuration>
    
    <!--  APPENDER: Define d贸nde y c贸mo se escriben los logs -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!--  ENCODER: Define el formato de los mensajes de log -->
        <encoder>
            <!--  PATTERN: Formato personalizado para mostrar fecha, nivel, clase y mensaje -->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!--  LOGGER espec铆fico para nuestro paquete com.aptivist -->
    <logger name="com.aptivist" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <!--  ROOT LOGGER: Configuraci贸n por defecto para todos los dem谩s logs -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    
</configuration>
